{% extends 'baseBackend.html.twig' %}

{% block title %}
	<title>Editar Usuario</title>
{% endblock title %}

{% block container %}
	<script>
	$(document).ready(function () {
		$("#btnEliminar").click(function () {
			if (confirm("Â¿Est&aacute; seguro que quiere eliminar al usuario?")) {
				$("#formEliminar").submit();
			}
		});
	});
	</script>
	<h2>Editar Usuario</h2>
	{{ form_start(form,{ 'attr': {'class': 'altaUsuario'} }) }}
		{{ form_errors(form) }}
		<div class="form-group">
			{{ form_label(form.username, 'Nombre de Usuario') }}
			{{ form_widget(form.username )}}
			{{ form_errors(form.username) }}
		</div>
		<div class="form-group">
			{{ form_label(form.mail, 'Email') }}
			{{ form_widget(form.mail) }}
			{{ form_errors(form.mail) }}
		</div>
		<div class="form-group">
			{{ form_label(form.rol, 'Rol del Usuario') }}
			{{ form_widget(form.rol) }}
			{{ form_errors(form.rol) }}
		</div>
		<div class="form-group">
			{{ form_widget(form.enviar) }}
		</div>
	{{ form_end(form) }}
	{{ form_start(delete_form, {'attr': {'id':'formEliminar'}}) }}
		<div class="form-group">
			<button type="button" id="btnEliminar">Eliminar</button>
		</div>
	{{ form_end(delete_form) }}
{% endblock container %}