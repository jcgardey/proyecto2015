{% extends 'baseBackend.html.twig' %}

{% block title %}
	<title>Ingresar un Responsable</title>
{% endblock title %}

{% block container %}
	<script>
		$(document).ready(function () {

			$("#btnEliminar").click(function () {
				if (confirm("¿Está seguro que quiere eliminar al responsable?")) {
					$("#formDel").submit();
				}
			});
		});
	</script>
	<h2>Ingresar Responsable</h2>
	{{ form_start(form,{'attr': {'class': 'altaResponsable'}}) }}
					{{ form_errors(form)}}
					<div class="form-group">
						{{ form_label(form.nombre, 'Nombre') }}
						{{ form_widget(form.nombre) }}
						{{ form_errors(form.nombre) }}
					</div>
					<div class="form-group">
						{{ form_label(form.apellido, 'Apellido') }}
						{{ form_widget(form.apellido) }}
						{{ form_errors(form.apellido) }}
					</div>
					<div class="form-group">
						{{ form_label(form.tipo, 'Tipo de Responsable') }}
						{{ form_widget(form.tipo) }}
						{{ form_errors(form.tipo) }}
					</div>
					<div class="form-group">
						{{ form_label(form.fechaNacimiento, 'Fecha de Nacimiento') }}
						{{ form_widget(form.fechaNacimiento,{'attr': {'placeholder': 'DD-MM-YYYY' }}) }}
						{{ form_errors(form.fechaNacimiento) }}
					</div>
					<div class="form-group">
						{{ form_label(form.sexo, 'Sexo') }}
						{{ form_widget(form.sexo) }}
						{{ form_errors(form.sexo) }}
					</div>
					<div class="form-group">
						{{ form_label(form.mail, 'Email') }}
						{{ form_widget(form.mail) }}
						{{ form_errors(form.mail) }}
					</div>
					<div class="form-group">
						{{ form_label(form.direccion, ('Dirección') | raw) }}
						{{ form_widget(form.direccion) }}
						{{ form_errors(form.direccion) }}
					</div>
					<div class="form-group">
						{{ form_label (form.telefono, 'Telefono' | raw) }}
						{{ form_widget(form.telefono) }}
						{{ form_errors(form.telefono) }}
					</div>
					<div class="form-group">
						{{ form_label(form.usuario, 'Usuario a Asignar') }}
						{{ form_widget(form.usuario) }}
						{{ form_errors(form.usuario) }}
					</div>
					<div class="form-group">
						{{ form_widget(form.enviar) }}
					</div>
	{{ form_end(form) }}
	{# si existe delete_form quiere decir que el responsable ya existe y que se estan modificando sus datos #}
	{% if delete_form is defined %}
		{{ form_start(delete_form,{ 'attr': {'id':'formDel'}}) }}
			<div class="form-group">
				<button type="button" id="btnEliminar">Eliminar</button>
			</div>
		{{ form_end(delete_form) }}
	{% endif %}
{% endblock container %}